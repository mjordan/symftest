{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Box</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Hostname</th>
                <td>{{ entity.hostname }}</td>
            </tr>
            <tr>
                <th>Network</th>
                <td>{{ entity.getPln.getName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('box') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('box_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
