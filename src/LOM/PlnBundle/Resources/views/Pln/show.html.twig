{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pln</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Boxes</th>                
                <td>
                    {% for box in entity.getBoxes %}
                    {{ box.getHostname }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('pln') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('pln_addbox', { 'id': entity.id }) }}">
            Add a box for this PLN
        </a>
    </li>
    <li>
        <a href="{{ path('pln_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
