{% extends '::base.html.twig' %}

{% block body -%}

<h1>Admin</h1>

<p>Hello {{ app.user.username }}.</p>

<p><a href="{{ path('admin_user_new') }}">add a user</a></p>

<ul>
    {% for user in users %}
    <li><a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.username }}</a> <br>
        {% for role in user.getRoles %} {{ role.name }}{% if not loop.last %}, {% endif %}{% endfor %}
    </li>
    {% endfor %}
</ul>

{% endblock %}