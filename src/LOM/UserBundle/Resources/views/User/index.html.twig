{% extends '::base.html.twig' %}

{% block body -%}
<h1>User</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Isactive</th>
            <td>{{ entity.isActive }}</td>
        </tr>
        <tr>
            <th>Fullname</th>
            <td>{{ entity.fullname }}</td>
        </tr>
        <tr>
            <th>Institution</th>
            <td>{{ entity.institution }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{% for role in entity.getRoles %} {{ role.name }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('user_edit') }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('user_password') }}">
            Change password
        </a>
    </li>
</ul>
{% endblock %}
